@model crazycola.Models.Almacen

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this?</strong>
</div>

<div>
    <h4>Almacen</h4>
    <hr />
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <td>@Html.DisplayFor(model => model.Nombre)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                <td>@Html.DisplayFor(model => model.Direccion)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Ciudad.Nombre)</th>
                <td>@Html.DisplayFor(model => model.Ciudad.Nombre)</td>
            </tr>
        </tbody>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-list"></i> Back to List
            </a>
        </div>
    }
</div>