@model crazycola.Models.Producto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Details</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h4>Producto</h4>
            <hr />

            <table class="table table-bordered">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                    <td>@Html.DisplayFor(model => model.Descripcion)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Precio)</th>
                    <td>@Html.DisplayFor(model => model.Precio)</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
             @if (@Session["UAdmin"].Equals("True"))
             {
                 <a href="@Url.Action("Edit", new { id = Model.ProductoId })" class="btn btn-primary">
                     <i class="fas fa-pencil-alt"></i> Edit
                 </a>
             }
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
