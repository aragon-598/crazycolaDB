@model crazycola.Models.Producto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this?</h4>
</div>

<div>
    <h4>Producto</h4>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <td>@Html.DisplayFor(model => model.Nombre)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <td>@Html.DisplayFor(model => model.Descripcion)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <td>@Html.DisplayFor(model => model.Precio)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
