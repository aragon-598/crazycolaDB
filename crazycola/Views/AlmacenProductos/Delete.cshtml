@model crazycola.Models.AlmacenProducto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this?</strong>
</div>

<div>
    <h4>AlmacenProducto</h4>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Stock)</th>
                    <td>@Html.DisplayFor(model => model.Stock)</td>
                </tr>
                <tr>
                    <th>Almacen</th>
                    <td>@Html.DisplayFor(model => model.Almacen.Nombre)</td>
                </tr>
                <tr>
                    <th>Producto</th>
                    <td>@Html.DisplayFor(model => model.Producto.Nombre)</td>
                </tr>
            </tbody>
        </table>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a href="@Url.Action("Index")" class="btn btn-default">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    }
</div>
